<div class="nested-fields">
    <div class="form-row">
      <div class="col-auto">
        <%= f.text_field :name, placeholder: 'Ingredient Name', class: 'form-control' %>
      </div>
    <div class="col-auto">
      <%= f.number_field :quantity, placeholder: 'Quantity', class: 'form-control' %>
    </div>

    <div class="col-auto">
      <%= link_to_remove_association "remove", f, class: 'btn btn-outline-danger' %>
    </div>
  </div>
</div>