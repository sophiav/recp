<div class="recipe-border">
  <h1 class="text-center"><%= @recipe.title %></h1>
  <h4 class="text-center"><small class="text-muted"><%= @recipe.category.downcase %>  |  <%= @recipe.prep_time %> minutes </small></h4>

  <h3>Ingredients</h3>
  <ul>
    <% @recipe.ingredients.each do |ingredient| %>
      <li><%= ingredient.quantity %> - <%= ingredient.name %></li>
    <% end  %>
  </ul>

  <h3>Instructions</h3>
  <p class="text-justify"><%= @recipe.description %></p>

  <div class="btn-group" role="group">
    <div class="form-buttons">
      <% if owner?(@recipe) %>
        <%= link_to "Edit Recipe", edit_recipe_path(@recipe), class: 'btn btn-primary btn-lg'%>
        <%= link_to "Delete Recipe", @recipe, method: :delete, data: { confirm: "Are you sure you want to delete this recipe?"}, class: 'btn btn-primary btn-lg' %>
      <% end %>
    </div>
  </div>
</div>


<h3>Comments</h3>
<%= render 'comments/form' %>

<% if @recipe.comments.present? %>
  <%= render 'comments/all' %>
<% end %>

<%= link_to "Back to Recipes", root_path, class: 'btn btn-link'%> 

