<h1><%= @recipe.title %></h1>

<h4><%= @recipe.category %><h4>
<p>Prep Time: <%= @recipe.prep_time %> minutes</p>

<h3>Ingredients</h3>
<ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li><%= ingredient.quantity %> - <%= ingredient.name %></li>
  <% end  %>
</ul>

<h3>Instructions</h3>
<%= @recipe.description %>

<h3>Comments</h3>
<% if @recipe.comments.present? %>
  <ul>
  <% @recipe.comments.each do |comment| %>
    <li>
      <%= comment.message %> - <%= link_to "Edit", edit_recipe_comment_path(@recipe, comment) %> | <%= link_to "Delete", recipe_comment_path(@recipe, comment), method: :delete %>
    </li>
  <% end %>
  </ul>
<% end %>
<%= render 'comments/form' %>

<br><br>
<%= link_to "Back to Recipes", root_path %> 
<%= link_to "Edit", edit_recipe_path(@recipe) %>
<%= button_to "Delete", @recipe, method: :delete, data: { confirm: "Are you sure you want to delete this recipe?"} %>
